if error
  h1= error
form(method="post" action="/todos/"+todo.id)
  div
    input(type="text" name="todo[title]" placeholder="title" value=todo.title autofocus)
  div
    label Work
    input(type="radio" name="todo[work]" value="true" required) 
    label Personal
    input(type="radio" name="todo[work]" value="false" required) 
  div
    input(type="submit" value="Save")