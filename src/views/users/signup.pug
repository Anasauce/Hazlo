extends ../layout

block content
    if error
      h1= error
      pre= stack
    form(method="post" action="/signup")
      div
        input(type="text" name="user[email]" placeholder="email" value=email)
      div
        input(type="text" name="user[avatar_url]" placeholder="avatar url")
      div
        input(type="password" name="user[password]" placeholder="password")
      div
        input(type="password" name="user[password_confirmation]" placeholder="password confirmation")
      div
        input(type="submit" value="Signup")
